{
  "manifest_version": 3,
  "name": "ChatAnchor",
  "version": "1.0",
  "description": "Markiere Text in Chats und springe jederzeit dorthin zur√ºck.",
  "permissions": ["storage", "contextMenus", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*", "https://chatgpt.com/*", "https://claude.ai/*"],
      "js": ["content.js"]
    }
  ]
}