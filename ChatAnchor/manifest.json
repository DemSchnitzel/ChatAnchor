{
  "manifest_version": 3,
  "name": "ChatAnchor",
  "version": "1.2",
  "description": "Markiere Text in Chats und springe jederzeit dorthin zurück.",
  "permissions": ["storage", "contextMenus", "activeTab", "scripting", "sidePanel", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "ChatAnchor öffnen"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}